<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    tools:layout_height="44dp">

    <ImageView
        android:id="@+id/base_title_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="@dimen/common_margin_left" />

    <TextView
        android:id="@+id/base_title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/common_margin_right"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/common_blue"
        android:textSize="14sp"
        tools:drawableEnd="@drawable/base_search_icon" />

    <TextView
        android:id="@+id/base_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingHorizontal="@dimen/common_padding_horizontal"
        android:singleLine="true"
        android:textColor="@color/common_black"
        android:textSize="16sp"
        tools:text="asjdfklasjdfkljasdklfjaasdfasdfasdfasdfasdklsdjflkasjdflkjasdklfdfasdfasdf" />

</merge>