<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_color_ffffffff"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="18dp"
        android:paddingBottom="18dp">
        <!--    <ImageView-->
        <!--        android:id="@+id/iv_footer"-->
        <!--        android:layout_width="18dp"-->
        <!--        android:layout_height="18dp"-->
        <!--        android:layout_marginRight="8dp"-->
        <!--        android:src="@drawable/ic_set_more_btn" />-->

        <ProgressBar
            android:id="@+id/pb_footer"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="@dimen/base_dimen_20dp"
            android:layout_height="@dimen/base_dimen_20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/base_dimen_8dp" />

        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/base_loading"
            android:textColor="@color/base_color_b2b2b2"
            android:textSize="@dimen/base_dimen_14sp" />
    </LinearLayout>
</FrameLayout>

